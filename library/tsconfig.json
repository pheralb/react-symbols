{
  "compilerOptions": {
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "lib": ["es5", "es2015", "es2016", "es2022", "dom", "esnext"],
    "types": ["node"],
    "module": "es2022",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "outDir": "build",
    "sourceMap": true,
    "strict": true,
    "target": "es6",
    "typeRoots": ["node_modules/@types"]
  },
  "include": [
    "eslint.config.js",
    "tsdown.config.ts",
    "src/**/*.ts",
    "src/**/*.tsx"
  ]
}
